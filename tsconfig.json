{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["./deploy", "./test", "./shared", "./scripts", "./typechain"],
  "files": ["./hardhat.config.ts"]
}
